# ===========================================
# CONFIGURATION PRODUCTION - ALVIAR DASHBOARD
# ===========================================
# ⚠️  IMPORTANT: Ne jamais commiter ce fichier avec des vraies valeurs !

# Django Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
DOMAIN_NAME=your-domain.com
API_DOMAIN=api.your-domain.com

# Database Configuration (PostgreSQL)
DB_NAME=alviar_production
DB_USER=alviar_user
DB_PASSWORD=your-super-secure-database-password
DB_HOST=localhost
DB_PORT=5432
DB_SSL=True

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@alviar.com

# Frontend URLs (for CORS)
FRONTEND_URL=https://your-domain.com
FRONTEND_URL_ALT=https://www.your-domain.com

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# File Upload Limits
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=3600
