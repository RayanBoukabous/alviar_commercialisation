# Configuration Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Configuration de la base de données
DB_NAME=alviar_db
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Configuration Redis
REDIS_URL=redis://localhost:6379/0

# Configuration email (optionnel)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuration de sécurité (production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Configuration des fichiers statiques et média
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Configuration Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Africa/Algiers

# Configuration de logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Configuration de l'application
APP_NAME=Alviar Dashboard
APP_VERSION=1.0.0
APP_DESCRIPTION=Système de gestion d'abattoir et de commercialisation

# Configuration des limites
MAX_UPLOAD_SIZE=10485760  # 10MB
MAX_IMAGE_SIZE=5242880    # 5MB

# Configuration des notifications
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False

# Configuration de l'API
API_RATE_LIMIT=1000  # Requêtes par heure
API_PAGE_SIZE=20

# Configuration de la sauvegarde
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Tous les jours à 2h du matin
BACKUP_RETENTION_DAYS=30

# Configuration de monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Configuration de cache
CACHE_TTL=300  # 5 minutes
CACHE_MAX_ENTRIES=1000









