# Configuration de l'application
NEXT_PUBLIC_APP_NAME=Liveness Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0

# Configuration API - URL de base pour toutes les requêtes
NEXT_PUBLIC_API_URL=http://aiuniversfs.ddns.net:7000/api/v1
API_TIMEOUT=10000

# Configuration de l'authentification
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Configuration de la base de données (exemple)
DATABASE_URL=postgresql://username:password@localhost:5432/liveness_dashboard

# Configuration des services externes
REDIS_URL=redis://localhost:6379

# Configuration des emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuration des uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuration du monitoring
SENTRY_DSN=your-sentry-dsn-here

# Configuration des analytics
GOOGLE_ANALYTICS_ID=your-ga-id-here
